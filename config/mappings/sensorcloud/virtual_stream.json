{
	"virtual_stream" : {
	
		"_source" : {
			"enabled" : true
		},
		
		"_timestamp" : {
			"enabled" : true,
			"format" : "basic_date_time" 
		},
		
		"properties" : {
		
			"name": {
				"type" : "string",
				"index" : "analyzed"
			},
		
			"description" : {
				"type" : "string",
				"index" : "not"
			},
	
			"tags" : {
				"type" : "string",
				"index" : "analyzed"
			},
	
			"group" : {
				"type" : "string",
				"index" : "not_analyzed"
			},
	
			"private" : {
				"type" : "boolean",
				"index" : "not_analyzed"
			},
	
			"history_size" : {
				"type" : "long",
				"index" : "not_analyzed"
			},
	
			"last_updated" : {
				"type" : "date",
				"index" : "not_analyzed"
			},
	
			"creation_date" : {
				"type" : "date",
				"index" : "no"
			},
	
			"function" : {
				"type" : "attachment",
				"index" : "no"
			}
		}
	}
}
